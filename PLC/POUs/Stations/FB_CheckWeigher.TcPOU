  <POU Name="FB_CheckWeigher" Id="{f2b6ec40-0a7e-498d-ad24-1bc64cb8a48b}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK FB_CheckWeigher EXTENDS FB_Station
VAR_INPUT
END_VAR
VAR_OUTPUT
END_VAR
VAR
	bLift					AT %Q* : BOOL;
	fScaleReading			AT %I* : LREAL;
	
	fWeightSetpoint			: LREAL := 1000;
	iWorkState				: DINT;
	tmrLift					: TON;
	tmrWeigh				: TON;
END_VAR
VAR CONSTANT
	WEIGH_DB				: LREAL := 0.85;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
    <Method Name="DoWork" Id="{06478269-7e8f-4cf3-8ab9-628ebb68d97b}">
      <Declaration><![CDATA[METHOD PROTECTED  DoWork : BOOL
VAR_INPUT
END_VAR
]]></Declaration>
      <Implementation>
        <ST><![CDATA[CASE iWorkState OF
	0:
		IF pPartStatus^.bCapperStatus THEN
			bLift := TRUE;
			tmrLift(IN:=TRUE, PT:=T#500MS);
			IF tmrLift.Q THEN
				tmrLift(IN:=FALSE);
				iWorkState := 10;
			END_IF
		ELSE
			DoWork := TRUE;
		END_IF
		
		
	10:
		tmrWeigh(IN:=TRUE, PT:=T#2S);
		IF tmrWeigh.Q THEN
			tmrWeigh(IN:=FALSE);
			pPartStatus^.fActualWeightMg := fScaleReading;
			iWorkState := 20;
		END_IF
		
	20:
		pPartStatus^.bWeightStatus := (pPartStatus^.fActualWeightMg > fWeightSetpoint - WEIGH_DB)
			AND (pPartStatus^.fActualWeightMg < fWeightSetpoint + WEIGH_DB);
		iWorkState := 30;
		
	30:
		bLift := FALSE;
		iWorkState := 0;
		DoWork := TRUE;
	
END_CASE]]></ST>
      </Implementation>
    </Method>
    <Method Name="FaultHandler" Id="{f883c496-e31b-4a3f-bc0d-333d136fe914}">
